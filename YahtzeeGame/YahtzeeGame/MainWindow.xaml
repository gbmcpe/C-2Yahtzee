        <Button x:Name="BtnClose" Content="Close" HorizontalAlignment="Left" Margin="16,229,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnReset" Content="Reset" HorizontalAlignment="Left" Margin="76,229,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnRollDice" Content="Roll Dice!" HorizontalAlignment="Left" Margin="135,229,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
