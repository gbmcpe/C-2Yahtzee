<Window x:Class="YahtzeeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YahtzeeGame"
        mc:Ignorable="d"
        Title="YahtzeeGame" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF1A1A1A"/>
            <GradientStop Color="#FF1A1A1A" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,0,32">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFF8686"/>
                <GradientStop Color="#FF235882" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="titleLb" Content="Welcome to Yahtzee!" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="50" FontFamily="Berlin Sans FB" Padding="10,10,10,10" Background="{x:Null}" Foreground="#FFD4FDCE" Margin="174,6,0,0" Height="76">
            <Label.Style>
                <Style/>
            </Label.Style>
            <Label.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.BorderBrush>
        </Label>
        <Button x:Name="singlePlayerbtt" Content="Single-player" HorizontalAlignment="Left" Margin="30,209,0,0" VerticalAlignment="Top" Height="70" Width="210" FontSize="30" FontFamily="Berlin Sans FB" Background="#FFEFF665" Foreground="#FF630A0A" Click="singlePlayerbtt_Click"/>
        <Button x:Name="multiPlayerBtt" Content="Multi-player" HorizontalAlignment="Left" Margin="287,208,0,0" VerticalAlignment="Top" Height="71" Width="210" FontSize="30" FontFamily="Berlin Sans FB" Background="#FFEFF665" Foreground="#FF630A0A" Click="multiPlayerBtt_Click"/>
        <Button x:Name="howToplayBtt" Content="How to play" HorizontalAlignment="Left" Margin="548,208,0,0" VerticalAlignment="Top" Height="71" Width="210" FontSize="30" FontFamily="Berlin Sans FB" Background="#FFEFF665" Foreground="#FF630A0A"/>
        <Button x:Name="btnHighScore" Content="High Scores" HorizontalAlignment="Left" Margin="174,342,0,0" VerticalAlignment="Top" Height="42" Width="176" FontSize="30" FontFamily="Berlin Sans FB" Background="#FFEFF665" Foreground="#FF630A0A" Click="btnHighScore_Click"/>
        <TextBox x:Name="nameTxtBx" HorizontalAlignment="Left" Margin="233,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" Height="40" FontFamily="Berlin Sans FB" FontSize="30" TextAlignment="Center"/>
        <Button x:Name="getNameBtt" Content="-&gt;" HorizontalAlignment="Left" Margin="548,150,0,0" VerticalAlignment="Top" Height="40" Width="46" FontSize="30" FontFamily="Berlin Sans FB" Background="#FFEFF665" Foreground="#FF630A0A" Click="getNameBtt_Click" IsDefault="True"/>
        <Label x:Name="lblPlayerName" Content="Please Enter your Player Name Below:" HorizontalAlignment="Left" Margin="275,82,0,0" VerticalAlignment="Top" Width="234" Background="{x:Null}" Height="38" FontSize="13" FontWeight="Medium" VerticalContentAlignment="Center" Foreground="#FFD4FDCE"/>
        <Button x:Name="btnAboutinfo" Content="About" HorizontalAlignment="Left" Margin="438,342,0,0" VerticalAlignment="Top" Height="42" Width="176" FontSize="30" FontFamily="Berlin Sans FB" Background="#FFEFF665" Foreground="#FF630A0A" Click="btnAbout"/>

    </Grid>
</Window>
