<UserControl x:Class="YahtzeeGame.PlayerScoreBoardColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <TextBlock Text="Player" Grid.Row="0" Margin="5"/>
        <TextBox Grid.Row="0" Margin="5"/>
        
        <TextBlock Text="Ones" Grid.Row="1" Margin="5"/>
        <TextBox Grid.Row="1" Margin="5"/>

        <TextBlock Text="Twos" Grid.Row="2" Margin="5"/>
        <TextBox Grid.Row="2" Margin="5"/>

        <TextBlock Text="Threes" Grid.Row="3" Margin="5"/>
        <TextBox Grid.Row="3" Margin="5"/>

        <TextBlock Text="Fours" Grid.Row="4" Margin="5"/>
        <TextBox Grid.Row="4" Margin="5"/>

        <TextBlock Text="Fives" Grid.Row="6" Margin="5"/>
        <TextBox Grid.Row="5" Margin="5"/>
        
        <TextBlock Text="Sixes" Grid.Row="7" Margin="5"/>
        <TextBox Grid.Row="7" Margin="5"/>

        <TextBlock Text="Sum" Grid.Row="8" Margin="5"/>
        <TextBox Grid.Row="8" Margin="5"/>

        <TextBlock Text="Bonus" Grid.Row="9" Margin="5"/>
        <TextBox Grid.Row="9" Margin="5"/>

        <TextBlock Text="Three of a Kind" Grid.Row="10" Margin="5"/>
        <TextBox Grid.Row="10" Margin="5"/>

        <TextBlock Text="Four of a Kind" Grid.Row="11" Margin="5"/>
        <TextBox Grid.Row="11" Margin="5"/>

        <TextBlock Text="Full House" Grid.Row="12" Margin="5"/>
        <TextBox Grid.Row="12" Margin="5"/>

        <TextBlock Text="Small Straight" Grid.Row="13" Margin="5"/>
        <TextBox Grid.Row="13" Margin="5"/>

        <TextBlock Text="Large Straight" Grid.Row="15" Margin="5"/>
        <TextBox Grid.Row="14" Margin="5"/>

        <TextBlock Text="Chance" Grid.Row="16" Margin="5"/>
        <TextBox Grid.Row="16" Margin="5"/>

        <TextBlock Text="YAHTZEE" Grid.Row="17" Margin="5"/>
        <TextBox Grid.Row="17" Margin="5"/>

        <TextBlock Text="Total Score" Grid.Row="18" Margin="5"/>
        <TextBox Grid.Row="18" Margin="5"/>
    </Grid>
</UserControl>
